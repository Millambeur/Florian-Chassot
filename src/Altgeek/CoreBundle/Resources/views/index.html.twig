{# src/CoreBundle/Ressources/views/index.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
      {% block title %}
        Florian Chassot
      {% endblock %}
    </title>

    {% block stylesheets %}
      {% stylesheets filter='cssrewrite, ?scssphp' 'bundles/altgeekcore/css/CoreMain.css' %}
        <link rel="stylesheet" href="{{ asset('bundles/altgeekcore/css/CoreMain.css') }}" type="text/css" />
      {% endstylesheets %}
    {% endblock %}
  </head>

  <body>

    {% block header %}
      {{ include("AltgeekCoreBundle:CoreViews:header.html.twig") }}
    {% endblock %}

	  <div id="content" class="col-md-9">
		  {% block body %}
		    <p> {{ 'Homepage content'|trans }} </p>
		  {% endblock %}
    </div>

    {% block footer %}
      {{ include("AltgeekCoreBundle:CoreViews:footer.html.twig") }}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}

  </body>
</html>